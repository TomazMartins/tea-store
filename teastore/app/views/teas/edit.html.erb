<div class="container">
  <div class="card">
    <%= simple_form_for @tea do |form| %>
      <div class="card-content">
        <%= render partial: 'form', locals: { tea: @tea, form: form } %>
      </div>
      <div class="card-action">
        <%= form.submit 'Save', class: 'waves-effect waves-light btn' %>
        <%= link_to 'Back', teas_path, class: 'waves-effect waves-light btn' %>
      </div>
    <% end %>
  </div>
</div>

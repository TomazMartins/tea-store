<div class="container">
  <div class="card">
    <div class="card-content">
      <%= simple_form_for @tea do |form| %>
        <div class="row">
          <div class="col s6">
            <%= form.input :category, label: 'Tea Category:', disabled: true %>
          </div>
        </div>
        <div class="row">
          <div class="col s6">
            <%= form.input :price, label: 'Tea Price:', disabled: true %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-action">
      <%= link_to 'Edit', edit_tea_path( @tea.id ), class: 'waves-effect waves-light btn' %>
      <%= link_to 'Back', teas_path, class: 'waves-effect waves-light btn' %>
    </div>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="card-content">
      <%= simple_form_for @client do |form| %>
        <div class="row">
          <div class="col s12">
            <%= form.input :name, label: 'Client Name:', disabled: true %>
          </div>
        </div>
        <div class="row">
          <div class="col s6">
            <%= form.input :email, label: 'Client E-mail:', disabled: true %>
          </div>
          <div class="col s6">
            <%= form.input :country, label: 'Client Country:', disabled: true %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-action">
      <%= link_to 'Edit', edit_client_path( @client.id ), class: 'waves-effect waves-light btn' %>
      <%= link_to 'Back', clients_path, class: 'waves-effect waves-light btn' %>
    </div>
  </div>
</div>
